  
  <% if @auth_edit >= @user.auth_level_edit %>
    <tr class='linemain'><td><%=t('administration')%></td><td></td></tr>
    <tr class="line<%= cycle('1', '2') %>">
      <td>
       <%= User.human_attribute_name('customernumber') %>
      </td>
      <td>
      <%= @user.customernumber %>
      </td>
    </tr>

    <tr class="line<%= cycle('1', '2') %>">
      <td>
       <%= User.human_attribute_name('customergroup_id') %>
      </td>
      <td>
      <%= @user.customergroup_id %>
      </td>
    </tr>

    <tr class="line<%= cycle('1', '2') %>">
      <td>
       <%= User.human_attribute_name('auth_level') %>
      </td>
      <td>
      <%= @user.auth_level %>
      </td>
    </tr>

    <tr class="line<%= cycle('1', '2') %>">
      <td>
        <%= User.human_attribute_name('auth_level_edit') %>
      </td>
      <td>
      <%= @user.auth_level_edit %>
      </td>
    </tr>

    <tr class="line<%= cycle('1', '2') %>">
      <td>
       <%= User.human_attribute_name('login_count') %>
      </td>
      <td>
      <%= @user.login_count %>
      </td>
    </tr>

    <tr class="line<%= cycle('1', '2') %>">
      <td>
       <%= User.human_attribute_name('failed_login_count') %>
      </td>
      <td>
      <%= @user.failed_login_count %>
      </td>
    </tr>

    <tr class="line<%= cycle('1', '2') %>">
      <td>
       <%= User.human_attribute_name('last_request_at') %>
      </td>
      <% if @user.last_request_at %>
        <td>
         <%= l @user.last_request_at, :format => :long_all %>
        </td>
      <% else %>
        <td></td>
      <% end %>
    </tr>

    <tr class="line<%= cycle('1', '2') %>">
      <td>
       <%= User.human_attribute_name('current_login_at') %>
      </td>
      <% if @user.current_login_at %>
        <td>
         <%= l @user.current_login_at, :format => :long_all %>
        </td>
      <% else %>
        <td></td>
      <% end %>
    </tr>

    <tr class="line<%= cycle('1', '2') %>">
      <td>
       <%= User.human_attribute_name('last_login_at') %>
      </td>

      <% if @user.last_login_at %>
        <td>
         <%= l @user.last_login_at, :format => :long_all %>
        </td>
      <% else %>
        <td></td>
      <% end %>
    </tr>

    <tr class="line<%= cycle('1', '2') %>">
      <td>
       <%= User.human_attribute_name('current_login_ip') %>
      </td>
      <td>
      <%= @user.current_login_ip %>
      </td>
    </tr>

    <tr class="line<%= cycle('1', '2') %>">
      <td>
       <%= User.human_attribute_name('last_login_ip') %>
      </td>
      <td>
      <%= @user.last_login_ip %>
      </td>
    </tr>
  <%end %>

  <tr class="linemain">
    <td colspan="2">
	<%= link_to t('Edit'), edit_user_path(@user) %> |
	<%= link_to t('Back'), users_path %>
    </td>
  </tr>

