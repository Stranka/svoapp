<div class="block">
  <div class="top">
    <h2><%= t('Login') %></h2>
  </div>
  <div class="content">

    <% if @user_session.errors.any? %>
      <div class="message error">
        <h2><%= @user_session.errors.count %> Fehler verhinderte(n) die Anmeldung:</h2>
        <ul>
          <% @user_session.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for @user_session, :url => {:action => "create"} do |f| %>
      <p><%= f.label :login %><br /><%= f.text_field :login %></p>
      <p><%= f.label :password %><br /><%= f.password_field :password %></p>
      <p><%= f.label :remember_me %>&nbsp;<%= f.check_box :remember_me %></p>
      <p> <%= f.submit "Login" %></p>
    <% end %>
  </div>
</div>