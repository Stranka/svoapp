
<tr class="linemain">

  <td colspan="2">
    <%= form_for(@menue,:html => { :name => 'menue' }) do |f| %>
      <% if @menue.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@menue.errors.count, "error") %> prohibited this menue from being saved:</h2>

          <ul>
          <% @menue.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    </td>
  </tr>

      <tr class= "line<%= cycle('1', '2') %>">
    <td>
        <%= f.label :name %>
    </td>
    <td>
        <%= f.text_field :name %>
    </td>
  </tr>

      <tr class= "line<%= cycle('1', '2') %>">
    <td>
        <%= f.label :the_url %>
    </td>
    <td>
        <%= f.text_field :the_url %>
    </td>
  </tr>
      <tr class= "line<%= cycle('1', '2') %>">
    <td>
        <%= f.label :the_controller %>
    </td>
    <td>
        <%= f.select :the_controller, options_for_select(Menue::CO,@menue.the_controller), options = {:prompt => t('please select')}, html_options = {:onchange => 'menue_action_auswahl()'} %>
    </td>
  </tr>



  <tr class= "line<%= cycle('1', '2') %>">
    <td>
        <%= f.label :the_action %>
    </td>
    <td>
      <% if @menue.the_controller == 'articles' %>
        <%= f.select :the_action, options_for_select(Menue::AC_ARTICLE,@menue.the_action), :prompt => t('please select')  %>
      <% else %>
        <%= f.select :the_action, options_for_select(Menue::AC_REST,@menue.the_action), :prompt => t('please select')  %>
      <% end %>
      </td>
  </tr>
      <% if @menue.the_controller == 'articles' %>

        <tr id='the_id' class= "line<%= cycle('1', '2') %>">
      <% else %>
        <% cycle('1', '2') %>
        <tr id='the_id' style="display:none"; class= "line<%= cycle('1', '2') %>">
      <% end %>
    <td>
        <%= f.label :the_id %>
    </td>
    <td>
        <%= f.collection_select :the_id, @articles, :id, :name, :prompt => t('please select') %>
    </td>
  </tr>

      <tr class= "line<%= cycle('1', '2') %>">
    <td>
        <%= f.label :auth_level %>
    </td>
    <td>
        <%= f.number_field :auth_level, options = {:size => 5, :min => '0', :max => '100'} %>
    </td>
  </tr>

      <tr class= "line<%= cycle('1', '2') %>">
    <td>
        <%= f.label :auth_level_edit %>
    </td>
    <td>
        <%= f.number_field :auth_level_edit, options = {:size => 5, :min => '0', :max => '100'} %>
    </td>
  </tr>

      <tr class= "line<%= cycle('1', '2') %>">
    <td>
        <%= f.label :parent_id %>
    </td>
    <td>
        <%= f.collection_select :parent_id, @men, :id, :name, :include_blank => true, :prompt => t('please select') %>
    </td>
  </tr>
      <tr class= "line<%= cycle('1', '2') %>">
    <td>
        <%= f.label :ontop %>
    </td>
    <td>
        <%= f.check_box :ontop %>
    </td>
  </tr>
      <tr class= "line<%= cycle('1', '2') %>">
    <td>
        <%= f.label :active %>
    </td>
    <td>
        <%= f.check_box :active %>
    </td>
  </tr>
      <tr>
    <td></td>
    <td>
      <%= f.submit %>
    </td>
  </tr>
    <% end %>

