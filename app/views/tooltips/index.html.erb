<div class="block">
  <div class="top">
    <h2><%= t('Administration') + ' ' + Tooltip.model_name.human %></h2>
  </div>
  <div class="content">
    <% if flash[:notice] %>
      <div class="message success"><%= flash[:notice] %></div>
    <% end %>

    <div class="dataTables_wrapper">
      <table class="listing data-table">
        <thead>
          <tr>
                    <th><%= Tooltip.human_attribute_name('title') %></th>
                    <th><%= Tooltip.human_attribute_name('content') %></th>
                    <th><%= Tooltip.human_attribute_name('markup') %></th>
                    <th><%= Tooltip.human_attribute_name('locale') %></th>
                    <th><%= t('action') %></th>
          </tr>
        </thead>

        <tbody>
        <% @tooltips.each do |tooltip| %>
          <tr class="<%= cycle('odd', '') %>">
              <td><%= tooltip.title %></td>
              <td><%= tooltip.content %></td>
              <td><%= tooltip.markup %></td>
              <td><%= tooltip.locale %></td>
              <td align="right"><nobr>
              <%= link_to image_tag("show.png", :border=>0, :alt => t('show'), :title => t('show')), tooltip %>
              <%= link_to image_tag("edit.png", :border=>0, :alt => t('edit'), :title => t('edit')), edit_tooltip_path(tooltip) %>
              <%= link_to image_tag("delete.png", :border=>0, :alt => t('delete'), :title => t('delete')), tooltip, :confirm => t('Are you sure?'), :method => :delete %>
            </nobr></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <p><%= link_to t('New ') + Tooltip.model_name.human, new_tooltip_path %></p>
  </div>
</div>
