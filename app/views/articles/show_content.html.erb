  <% if @config.show_title == true %>
    <tr>
      <td class ="myTitle" width="100%">
        <%= @showarticle.name %>
      </td>
    </tr>
  <% end %>
  <% if flash[:notice]%>
    <tr class="lineerror">
      <td colspan="5">
        <%= flash[:notice] %>
      </td>
    </tr>
  <% end %>
  <tr class="line<%= cycle('1', '2') %>">
    <td>
    <%= raw(@showarticle.content) %>
    </td>
  </tr>

  <tr class="linemain">
    <td>
      <% if params[:mode] == 'basket' %>
        <%= link_to t('Back'), :back  %>
      <% else %>
        &nbsp;
      <% end %>
    </td>
  </tr>

