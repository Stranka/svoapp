<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation" class="message error">
      <h2><%= pluralize(@article.errors.count, t('error'))%> <%= t('error_explanation') %></h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p><%= f.label :name %><br /><%= f.text_field :name %></p>
  <p><%= f.label :meta_tag_title %><br /><%= f.text_field :meta_tag_title, :size => 40, :class => "text medium" %></p>
  <p><%= f.label :meta_tag_keywords %><br /><%= f.text_field :meta_tag_keywords, :size => 100 %></p>
  <p><%= f.cktext_area :content, :width=>'100%', :height=>'500px', :ckeditor => {:language => "de"} %></p>
  <p><%= f.label :auth_level %><br /><%= f.number_field :auth_level, options = {:size => 5, :min => '0', :max => '100'} %></p>
  <p><%= f.label :auth_level_edit %><br /><%= f.number_field :auth_level_edit, options = {:size => 5, :min => '0', :max => '100'} %></p>
  <p><%= f.label :usage %><br /><%= f.select :usage, Article::USAGE %></p>
  <p><%= f.submit %></p>
<% end %>