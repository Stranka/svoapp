<%= javascript_include_tag :ckeditor %>

<tr class="linemain">
  <td colspan="2">
    <%= form_for(@article) do |f| %>
      <% if @article.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

          <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    </td>
  </tr>


  <tr class= "line<%= cycle('1', '2') %>">
    <td>
        <%= f.label :name %>
    </td>
    <td>
        <%= f.text_field :name %>
    </td>
  </tr>

      <tr class= "line<%= cycle('1', '2') %>">
    <td>
      <%= f.label :content %>
    </td>
    <td>
        <%= f.cktext_area :content, :toolbar=>'Full', :width=>'800px', :height=>'500px' %>
    </td>

  </tr>
      <tr class= "line<%= cycle('1', '2') %>">
    <td>
        <%= f.label :auth_level %>
    </td>
    <td>
        <%= f.number_field :auth_level, options = {:size => 5, :min => '0', :max => '100'} %>
    </td>
  </tr>

      <tr class= "line<%= cycle('1', '2') %>">
    <td>
        <%= f.label :auth_level_edit %>
    </td>
    <td>
        <%= f.number_field :auth_level_edit, options = {:size => 5, :min => '0', :max => '100'} %>
    </td>
  </tr>

      <tr>
    <td></td>
    <td>
      <%= f.submit %>
    </td>
  </tr>

    <% end %>

