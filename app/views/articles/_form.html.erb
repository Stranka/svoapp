<%#= javascript_include_tag "/javascripts/ckeditor/ckeditor.js" %>
<%= javascript_include_tag "ckeditor/init" %>
<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, t('error'))%> <%= t('error_explanation') %></h2>
      <% @article.errors.full_messages.each do |msg| %>
        <p>&bull; <%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <p><%= f.label :name %><br /><%= f.text_field :name %></p>
  <p id="show_normal"><a "href="#" onclick="$('#show_normal').hide(); $('#show_tiny').show(); $('#normal').show(); $('#cktextarea').hide()"><%= t('expertmode')%></a></p>
  <p id="show_tiny" style="display:none";><a "href="#" onclick="$('#show_normal').show(); $('#show_tiny').hide(); $('#normal').hide(); $('#cktextarea').show()"><%= t('usermode')%></a></p>

  <p id="cktextarea"><%= f.cktext_area :content, :toolbar=>'Full', :width=>'100%', :height=>'500px' %></p>
  <p id="normal" style="display:none"><%= f.text_area :content, :rows => 30, :cols => 80 %></p>
  <p><%= f.label :auth_level %><br /><%= f.number_field :auth_level, options = {:size => 5, :min => '0', :max => '100'} %></p>
  <p><%= f.label :auth_level_edit %><br /><%= f.number_field :auth_level_edit, options = {:size => 5, :min => '0', :max => '100'} %></p>
  <p><%= f.submit %></p>
<% end %>
