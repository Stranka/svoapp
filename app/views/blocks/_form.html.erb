<h2><a href="#" id="toggle-main" style="cursor: pointer; " class="visible">&nbsp;<%= t('Administration') + ' ' + Block.human_name %></a></h2>
<div class="block" id="main">

  <%= form_for(@block) do |f| %>
    <% if @block.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@block.errors.count, t('error')) %> <%= t('error_explanation') %></h2>
        <ul>
        <% @block.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
      
    <fieldset class="login">
      <legend><%= t(Block.human_name) %></legend>         
            <p><%= f.label :name %> <%= f.text_field :name %></p>
            <p><%= f.label :headerline %> <%= f.text_field :headerline %></p>
            <p><%= f.label :position %> <%= f.text_field :position %></p>
            <p><%= f.label :fieldorder %> <%= f.text_field :fieldorder %></p>
            <p><%= f.label :blockid %> <%= f.text_field :blockid %></p>
            <p><%= f.label :active %> <%= f.check_box :active %></p>
            <p><%= f.label :auth_level %> <%= f.text_field :auth_level %></p>
            <p><%= f.label :auth_level_edit %> <%= f.text_field :auth_level_edit %></p>
            <%= f.submit %>
    </fieldset>
  <% end %>
</div>   

