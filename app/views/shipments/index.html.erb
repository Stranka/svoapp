<% if flash[:notice]%>
  <div class="big-message success">
    <h2><%= flash[:notice] %></h2>
    <div class="bg"></div>
    <div class="close"></div>
  </div>
<% end %>

<div class="block">
  <div class="top">
    <h2><%= t('Administration') + ' ' + Shipment.human_name %></h2>
  </div>
  <div class="content">
    <div class="dataTables_wrapper">
      <table class="listing data-table">
        <thead>
          <tr>
            <th><%= Shipment.human_attribute_name('name') %></th>
            <th><%= Shipment.human_attribute_name('weight_max') %></th>
            <th><%= Shipment.human_attribute_name('lenght_max') %></th>
            <th><%= Shipment.human_attribute_name('scale_id') %></th>
            <th><%= Shipment.human_attribute_name('auth_level') %></th>
            <th><%= Shipment.human_attribute_name('auth_level_edit') %></th>
            <th><%= t('action') %></th>
          </tr>
        </thead>  
        <tbody>
        <% @shipments.each do |shipment| %>
          <tr class="<%= cycle('odd', '') %>">
            <td><%= shipment.name %></td>
            <td><%= shipment.weight_max %></td>
            <td><%= shipment.lenght_max %></td>
            <td><%= shipment.scale_id %></td>
            <td><%= shipment.auth_level %></td>
            <td><%= shipment.auth_level_edit %></td>
            <td align="right"><nobr>
              <%= link_to image_tag("show.png", :border=>0, :alt => t('show'), :title => t('show')), shipment %>
              <%= link_to image_tag("edit.png", :border=>0, :alt => t('edit'), :title => t('edit')), edit_shipment_path(shipment) %>
              <%= link_to image_tag("delete.png", :border=>0, :alt => t('delete'), :title => t('delete')), shipment, :confirm => t('Are you sure?'), :method => :delete %>
            </nobr></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <p><%= link_to t('New ') + Shipment.human_name, new_shipment_path %></p>
  </div>
</div>
