<li>
  <% if menue.the_controller? %>
    <% if menue.the_id? %>
      <%= link_to_unless_current( t(menue.name), {:controller => menue.the_controller, :action => menue.the_action, :id => menue.the_id}) do %>
        <div class='currenttopmenue'><%= t(menue.name) %></div>
      <% end %>
    <% else %>
      <%= link_to_unless_current( t(menue.name), {:controller => menue.the_controller, :action => menue.the_action}) do %>
        <div class='currenttopmenue'><%= t(menue.name) %></div>
      <% end %>
    <% end %>
  <% else %>
      <%= link_to t(menue.name), menue.the_url , :target => "_blank" %>
  <% end %>
</li>

