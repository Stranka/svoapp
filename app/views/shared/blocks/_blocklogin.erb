<%= form_for @user_session, :url => {:controller => 'user_sessions', :action => "create"} do |f| %> 
  <p><%= f.label :login %><br /><%= f.text_field :login , :size => 20 %></p>
  <p><%= f.label :password %><br /> <%= f.password_field :password, :size => 20 %></p>
  <p><%= f.submit t('login'), :class => "button small"%> 

  <% if @config.shop_active == true %>
    &nbsp; &nbsp; <%= link_to t('New Customer'), { :controller => :customers, :action => :new } %>
  <% end %>
  </p>
<% end %>    
