<div class="block">
  <div class="top">
    <h2><%= t('Administration') + ' ' + Product.model_name.human %></h2>
  </div>
  <div class="content">
    <% if flash[:notice] %>
      <div class="message success"><%= flash[:notice] %></div>
    <% end %>

    <div class="dataTables_wrapper">
      <table class="listing data-table">
        <thead>
          <tr>
            <th><%= Product.human_attribute_name('shorttext') %></th>
            <th><%= Product.human_attribute_name('description') %></th>
            <th><%= Product.human_attribute_name('producer') %></th>
            <th><%= Product.human_attribute_name('price') %></th>
            <th><%= Product.human_attribute_name('product_features') %></th>
            <th><%= Product.human_attribute_name('weight') %></th>
            <th><%= t('action') %></th>
          </tr>
        </thead>

        <tbody>
        <% @products.each do |product| %>
          <tr class="<%= cycle('odd', '') %>">
            <td><%= product.shorttext %></td>
            <td><%= truncate( product.description, :length => 100 ) %></td>
            <td><%= product.producer %></td>
            <td><%= number_to_currency(product.price) %></td>
            <td><%= product.product_features %></td>
            <td><%= product.weight %> <%= product.unit_of_weight %></td>
            <td align="right"><nobr>
              <%= link_to image_tag("show.png", :border=>0, :alt => t('show'), :title => t('show')), product %>
              <%= link_to image_tag("edit.png", :border=>0, :alt => t('edit'), :title => t('edit')), edit_product_path(product) %>
              <%= link_to image_tag("delete.png", :border=>0, :alt => t('delete'), :title => t('delete')), product, :confirm => t('Are you sure?'), :method => :delete %>
            </nobr></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <p><%= link_to t('New ') + Product.model_name.human, new_product_path %></p>
  </div>
</div>