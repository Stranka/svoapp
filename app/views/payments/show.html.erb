<h2><a href="#" id="toggle-main" style="cursor: pointer; " class="visible">&nbsp;<%= t('Administration') + ' ' + Payment.human_name %></a></h2>

<%= notice %>

<div class="block" id="main">
  <table>
    <thead>
      <tr>
        <th class="table-head" colspan="2"><%= t('Show ') + Payment.human_name %></th>
      </tr>
      <tr>
        <th><%= t('Key')%></th>
        <th><%= t('Value')%></th>
      </tr>
    </thead>

    <tbody>
          <tr class="line<%= cycle('1', '2') %>">
        <td width="50%">
          <%= Payment.human_attribute_name('name') %>
        </td>
        <td>
          <%= @payment.name %>
        </td>
      </tr>
          <tr class="line<%= cycle('1', '2') %>">
        <td width="50%">
          <%= Payment.human_attribute_name('cost') %>
        </td>
        <td>
          <%= @payment.cost %>
        </td>
      </tr>
          <tr class="line<%= cycle('1', '2') %>">
        <td width="50%">
          <%= Payment.human_attribute_name('auth_level') %>
        </td>
        <td>
          <%= @payment.auth_level %>
        </td>
      </tr>
          <tr class="line<%= cycle('1', '2') %>">
        <td width="50%">
          <%= Payment.human_attribute_name('auth_level_edit') %>
        </td>
        <td>
          <%= @payment.auth_level_edit %>
        </td>
      </tr>
        </tbody>

    <tfoot>
      <tr class="linemain">
        <th colspan="2">
          <%= link_to t('Edit'), edit_payment_path(@payment) %> |
          <%= link_to t('Back'), payments_path %>
        </th>
      </tr>
    <tfoot>    
  </table>
</div>  

