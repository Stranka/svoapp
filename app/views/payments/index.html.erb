<% if flash[:notice]%>
  <div class="big-message success">
    <h2><%= flash[:notice] %></h2>
    <div class="bg"></div>
    <div class="close"></div>
  </div>
<% end %>

<div class="block">
  <div class="top">
    <h2><%= t('Administration') + ' ' + Payment.model_name.human %></h2>
  </div>
  <div class="content">
    <div class="dataTables_wrapper">
      <table class="listing data-table">
        <thead>
          <tr>
            <th><%= Payment.human_attribute_name('name') %></th>
            <th><%= Payment.human_attribute_name('cost') %></th>
            <th><%= Payment.human_attribute_name('auth_level') %></th>
            <th><%= Payment.human_attribute_name('auth_level_edit') %></th>
            <th><%= t('action') %></th>
          </tr>
        </thead>  
    
        <tbody>
        <% @payments.each do |payment| %>
          <tr class="<%= cycle('odd', '') %>">
            <td><%= payment.name %></td>
            <td><%= payment.cost %></td>
            <td><%= payment.auth_level %></td>
            <td><%= payment.auth_level_edit %></td>
            <td align="right"><nobr>
              <%= link_to image_tag("show.png", :border=>0, :alt => t('show'), :title => t('show')), payment %>
              <%= link_to image_tag("edit.png", :border=>0, :alt => t('edit'), :title => t('edit')), edit_payment_path(payment) %>
              <%= link_to image_tag("delete.png", :border=>0, :alt => t('delete'), :title => t('delete')), payment, :confirm => t('Are you sure?'), :method => :delete %>
            </nobr></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <p><%= link_to t('New ') + Payment.model_name.human, new_payment_path %></p>
  </div>
</div>
