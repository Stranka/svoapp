<% if @payment.errors.any? %>
  <div class="big-message error">
    <h2><%= pluralize(@payment.errors.count, t('error')) %> <%= t('error_explanation') %></h2>
    <% @payment.errors.full_messages.each do |msg| %>
      <p>&bull; <%= msg %></p>
    <% end %>
    <div class="bg"></div>
    <div class="close"></div>
  </div>
<% end %>

<div class="block">
  <div class="top">
    <h2><%= t('Administration') + ' ' + Payment.human_name %></h2>
  </div>
  <div class="content">
    <%= form_for(@payment) do |f| %>
      <fieldset class="login">
        <legend><%= t(Payment.human_name) %></legend>
          <p><%= f.label :name %><br /><%= f.text_field :name %></p>
          <p><%= f.label :cost %><br /><%= f.text_field :cost %></p>
          <p><%= f.label :auth_level %><br /><%= f.text_field :auth_level %></p>
          <p><%= f.label :auth_level_edit %><br /><%= f.text_field :auth_level_edit %></p>
          <p><%= f.submit %></p>
      </fieldset>
    <% end %>