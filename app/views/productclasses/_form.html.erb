<% if @productclass.errors.any? %>
  <div class="big-message error">
    <h2><%= pluralize(@productclass.errors.count, t('error')) %> <%= t('error_explanation') %></h2>
    <% @productclass.errors.full_messages.each do |msg| %>
      <p>&bull; <%= msg %></p>
    <% end %>
    <div class="bg"></div>
    <div class="close"></div>
  </div>
<% end %>


<div class="block">
  <div class="top">
    <h2><%= t('Administration') + ' ' + Productclass.human_name %></h2>

    </div>
    <div class="content">
    <%= form_for(@productclass, :html => { :multipart => true }) do |f| %>

    <fieldset class="login">
      <legend><%= Productclass.human_name %></legend>
      <p><%= f.label :name %><br /><%= f.text_field :name %></p>
      <p><%= f.label :parent_id %><br /><%#= collection_select('f',:parent_id, @prclasses, :id, :name, :include_blank => true, :prompt => t('please select')) %>
         <%= f.collection_select :parent_id, @prclasses, :id, :name, :include_blank => true, :prompt => t('please select') %></p>
      <p><%= f.label :picture %><br /><%= f.file_field(:picture_field, :style => "width: 30em") %></p>
      <p><%= f.label :auth_level %><br /><%= f.number_field :auth_level, options = {:size => 5, :min => '0', :max => '100'} %></p>
      <p><%= f.label :auth_level_edit %><br /><%= f.number_field :auth_level_edit, options = {:size => 5, :min => '0', :max => '100'} %></p>
      <p><%= f.submit %></p>
      </fieldset>
    <% end %>
