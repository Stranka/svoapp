<% if flash[:notice]%>
  <div class="big-message success">
    <h2><%= flash[:notice] %></h2>
    <div class="bg"></div>
    <div class="close"></div>
  </div>
<% end %>

<div class="block">
  <div class="top">
    <h2><%= t('Administration') + ' ' + News.human_name %></h2>
  </div>
  <div class="content">
    <div class="dataTables_wrapper">
      <table class="listing data-table">
        <thead class="listing">
          <tr>
            <th><%= News.human_attribute_name('title') %></th>
            <th><%= News.human_attribute_name('date') %></th>
            <th><%= News.human_attribute_name('notice') %></th>
            <th><%= News.human_attribute_name('format') %></th>
            <th><%= News.human_attribute_name('auth_level') %></th>
            <th><%= News.human_attribute_name('auth_level_edit') %></th>
            <th><%= t('action') %></th>
          </tr>
        </thead>

        <tbody>
        <% @news.each do |news| %>
          <tr class="<%= cycle('odd', '') %>">
              <td><%= news.title %></td>
              <td><%= news.date %></td>
              <td><%= news.notice %></td>
              <td><%= news.format %></td>
              <td><%= news.auth_level %></td>
              <td><%= news.auth_level_edit %></td>
              <td align="right"><nobr>
              <%= link_to image_tag("show.png", :border=>0, :alt => t('show'), :title => t('show')), news %>
              <%= link_to image_tag("edit.png", :border=>0, :alt => t('edit'), :title => t('edit')), edit_news_path(news) %>
              <%= link_to image_tag("delete.png", :border=>0, :alt => t('delete'), :title => t('delete')), news, :confirm => t('Are you sure?'), :method => :delete %>
            </nobr></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <p><%= link_to t('New ') + News.human_name, new_news_path %></p>
  </div>
</div>