<!DOCTYPE html>
<html>
  <head>
    <title><%= @config.title %></title>
    <%= stylesheet_link_tag @stylesheet %>
    <%= javascript_include_tag :all %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <table id="TopPage" width="<%=@config.pagewidth%>%" class="tabletoppage">
      <tr>
        <td>
          <table id="Header" width="100%" class="tableheader">
            <tr>
              <% if @config.position_logo == 'right' %>
                <td align="left" width="70%"></td>
                <td align="right" width="30%" valign="center"><img src="<%= @logo %>" border="0" alt="Logo"></td>
              <% else %>
                <td align="left" width="30%" valign="center"><img src="<%= @logo %>" border="0" alt="Logo"></td>
                <td align="right" width="70%"></td>
              <% end %>
            </tr>
          </table>
          <table id="menue" class="tablenav">
            <tr class="tablelinenav">
              <td>
                <ul>
                  <%= render :partial => "shared/menue", :collection => @menue_top, :as => :menue %>
                </ul>
              </td>
            </tr>
          </table>

          <table id="container" class="tablecontainer">
            <tr>
              <% if @config.block_left == true %>
                <td id="sidebar" width=<%= @config.block_left_width %>% class="sidebar">
                  <%= render :partial => "shared/blocks/blocks", :collection => @lblocks, :as => :block %>
                </td>
              <% end %>
              <td>
                <% if @config.topimage == true and controller.action_name == 'showme' %>
                  <%= render :partial => "shared/topimage" %>
                <% end %>
                <table id="content" class="tablecontent">
                  <%= yield %>
                </table>
              </td>
              <% if @config.block_right == true %>
                <td width=<%=@config.block_left_width%>%>
                  <%= render :partial => "shared/blocks/blocks", :collection => @rblocks, :as => :block %>
                </td>
              <% end %>
            </tr>
          </table>

          <table id="footer" class="tablefooter">
            <tr>
              <td>
                <%= render :partial => "shared/footer" %>
              </td>
            </tr>
          </table>

        </td>
      </tr>
    </table>

  </body>
</html>

