    <%= csrf_meta_tag %>
  </head>
  <body class="bck-3">

    <div class="page soft-red liquid" width="<%=@config.pagewidth%>%">
    
      <div class="header" align=<%= @config.position_logo %>>
        <div class="wrapper">
          <div class="inner">
            <h2 id="branding"><img src="<%=@logo %>" alt="Logo" style="margin:10px"></h1>
            <ul class="main-menu">
              <%= render :partial => "shared/menue", :collection => @menue_top, :as => :menue %>
              <li><%= link_to_function(image_tag("print.png", :style => "vertical-align:middle", :border => 0, :alt => t('print'), :title => t('print')), "javascript:print()") %></li>
            </ul>
            <ul class="secondary-menu">
              <li>&nbsp;<%= link_to (image_tag('/images/at.gif', :style => "vertical-align:middle")), url_options={:controller => 'menues', :action => 'change_language', :language => 'de'}, html_options={:class => 'user-menu-link'} %></li>
              <li><%= link_to (image_tag('/images/en.gif', :style => "vertical-align:middle")), url_options={:controller => 'menues', :action => 'change_language', :language => 'en'}, html_options={:class => 'user-menu-link'}  %></li>
            </ul>
          </div>
        </div>
      </div>

      <div class="middle grid">
        <div class="wrapper">
          <% if @config.block_left == true %>
            <div class="column grid-<%=@config.block_left_width%>">
              <%= render :partial => "shared/blocks/blocks", :collection => @lblocks, :as => :block %>
            </div>
          <% end %>
          <div class="column grid-<%= 16 - @config.block_left_width - @config.block_right_width %>">
            <%= yield %>
          </div>
          <% if @config.block_right == true %>
            <div class="column grid-<%=@config.block_right_width%>">
              <%= render :partial => "shared/blocks/blocks", :collection => @rblocks, :as => :block %>
            </div>
          <% end %>
          <div class="clear"></div>
        </div>
      </div>
      <div class="footer">
        <div class="wrapper">
          <div class="inner">
            <%= render :partial => "shared/footer" %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

