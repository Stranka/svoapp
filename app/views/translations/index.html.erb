<% if flash[:notice]%>
  <div class="big-message success">
    <h2><%= flash[:notice] %></h2>
    <div class="bg"></div>
    <div class="close"></div>
  </div>
<% end %>

<div class="block">
  <div class="top">
    <h2><%= t('Administration') + ' ' + Translation.human_name %></h2>
  </div>
  <div class="content">
    <div class="dataTables_wrapper">
      <table class="listing data-table">
        <thead>
          <tr>
                <th><%= Translation.human_attribute_name('locale') %></th>
                <th><%= Translation.human_attribute_name('key') %></th>
                <th><%= Translation.human_attribute_name('value') %></th>
                <th><%= Translation.human_attribute_name('interpolations') %></th>
                <th><%= Translation.human_attribute_name('is_proc') %></th>
                <th><%= Translation.human_attribute_name('auth_level') %></th>
                <th><%= Translation.human_attribute_name('auth_level_edit') %></th>
                <th><%= t('action') %></th>
      </tr>
    </thead>

    <tbody>
    <% @translations.each do |translation| %>
      <tr class="<%= cycle('odd', '') %>">
          <td><%= translation.locale %></td>
          <td><%= translation.key %></td>
          <td><%= translation.value %></td>
          <td><%= translation.interpolations %></td>
          <td><%= translation.is_proc %></td>
          <td><%= translation.auth_level %></td>
          <td><%= translation.auth_level_edit %></td>
          <td align="right"><nobr>
          <%= link_to image_tag("show.png", :border=>0, :alt => t('show'), :title => t('show')), translation %>
          <%= link_to image_tag("edit.png", :border=>0, :alt => t('edit'), :title => t('edit')), edit_translation_path(translation) %>
          <%= link_to image_tag("delete.png", :border=>0, :alt => t('delete'), :title => t('delete')), translation, :confirm => t('Are you sure?'), :method => :delete %>
            </nobr></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
          <%= link_to t('New ') + Translation.human_name, new_translation_path %>
  </div>
</div>

